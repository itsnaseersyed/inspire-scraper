<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>INSPIRE Contact Details Scraper</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            color: #333;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 30px;
            border-radius: 15px 15px 0 0;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .header h1 {
            color: #667eea;
            font-size: 2em;
            margin-bottom: 10px;
        }

        .header p {
            color: #666;
            font-size: 1.1em;
        }

        .main-section {
            background: white;
            padding: 40px;
            border-radius: 0 0 15px 15px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: #444;
            font-size: 1.1em;
        }

        select {
            width: 100%;
            padding: 15px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1em;
            transition: all 0.3s;
            background: white;
        }

        select:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .button-group {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        button {
            flex: 1;
            padding: 15px 30px;
            font-size: 1.1em;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: #e0e0e0;
            color: #333;
        }

        .btn-secondary:hover:not(:disabled) {
            background: #d0d0d0;
        }

        button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .status-panel {
            margin-top: 30px;
            padding: 25px;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border-radius: 10px;
            display: none;
        }

        .status-panel.active {
            display: block;
        }

        .status-info {
            margin-bottom: 20px;
        }

        .status-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        }

        .status-row:last-child {
            border-bottom: none;
        }

        .status-label {
            font-weight: 600;
            color: #555;
        }

        .status-value {
            color: #667eea;
            font-weight: 500;
        }

        .progress-bar {
            width: 100%;
            height: 30px;
            background: white;
            border-radius: 15px;
            overflow: hidden;
            margin-top: 15px;
            box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            transition: width 0.5s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 0.9em;
        }

        .message {
            margin-top: 20px;
            padding: 15px;
            border-radius: 8px;
            font-size: 1em;
            text-align: center;
        }

        .message.success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .message.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .message.info {
            background: #d1ecf1;
            color: #0c5460;
            border: 1px solid #bee5eb;
        }

        .download-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 30px;
            background: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .download-btn:hover {
            background: #218838;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }

        .pulsing {
            animation: pulse 2s infinite;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>ðŸŽ“ INSPIRE Contact Details Scraper</h1>
            <p>Extract school contact information from INSPIRE Awards</p>
        </div>

        <div class="main-section">
            <div class="form-group">
                <label for="stateSelect">Step 1: Select State:</label>
                <select id="stateSelect" size="8">
                    <option value="">-- Select a State --</option>
                    {% for state_id, state_name in states.items() %}
                    <option value="{{ state_id }}">{{ state_name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div id="districtSection" class="form-group" style="display: none;">
                <label for="districtList">Step 2: Select District(s):</label>

                <div style="margin-bottom: 10px;">
                    <label style="display: inline-flex; align-items: center; cursor: pointer; font-weight: normal;">
                        <input type="checkbox" id="selectAllDistricts"
                            style="margin-right: 8px; width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-weight: 600; color: #667eea;">âœ“ Select All Districts</span>
                    </label>
                </div>

                <div id="districtList"
                    style="max-height: 300px; overflow-y: auto; border: 2px solid #e0e0e0; border-radius: 8px; padding: 15px; background: #f9f9f9;">
                    <p style="color: #999;">Loading districts...</p>
                </div>

                <small style="color: #666; margin-top: 10px; display: block;">
                    ðŸ’¡ Tip: Click checkboxes to select multiple districts
                </small>
            </div>

            <div class="button-group">
                <button id="startBtn" class="btn-primary" onclick="startScraping()" disabled>
                    Start Scraping
                </button>
                <button id="stopBtn" class="btn-secondary" onclick="stopScraping()" disabled>
                    Stop
                </button>
            </div>

            <div id="statusPanel" class="status-panel">
                <h3 style="margin-bottom: 20px; color: #333;">Scraping Status</h3>

                <div class="status-info">
                    <div class="status-row">
                        <span class="status-label">Current State:</span>
                        <span class="status-value" id="currentState">-</span>
                    </div>
                    <div class="status-row">
                        <span class="status-label">Current District:</span>
                        <span class="status-value" id="currentDistrict">-</span>
                    </div>
                    <div class="status-row">
                        <span class="status-label">Current School:</span>
                        <span class="status-value" id="currentSchool">-</span>
                    </div>
                    <div class="status-row">
                        <span class="status-label">Total Records:</span>
                        <span class="status-value" id="totalRecords">0</span>
                    </div>
                </div>

                <div class="progress-bar">
                    <div id="progressFill" class="progress-fill" style="width: 0%">0%</div>
                </div>

                <div id="statusMessage" class="message info" style="margin-top: 20px;">
                    Ready to start...
                </div>

                <div id="downloadSection" style="text-align: center; display: none;">
                    <a href="/api/download" class="download-btn" download>
                        ðŸ“¥ Download Excel File
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        let statusInterval = null;
        let currentStateId = null;

        // Listen for state selection changes
        document.getElementById('stateSelect').addEventListener('change', function () {
            const stateId = this.value;
            currentStateId = stateId;

            if (stateId) {
                loadDistricts(stateId);
            } else {
                document.getElementById('districtSection').style.display = 'none';
                document.getElementById('startBtn').disabled = true;
            }
        });

        // Load districts for selected state
        function loadDistricts(stateId) {
            const districtList = document.getElementById('districtList');
            districtList.innerHTML = '<p style="color: #999;">Loading districts...</p>';
            document.getElementById('districtSection').style.display = 'block';
            document.getElementById('startBtn').disabled = true;

            fetch(`/api/districts/${stateId}`)
                .then(response => response.json())
                .then(districts => {
                    // Clear and populate with checkboxes
                    districtList.innerHTML = '';

                    Object.entries(districts).forEach(([id, name]) => {
                        const checkboxDiv = document.createElement('div');
                        checkboxDiv.style.marginBottom = '8px';

                        const label = document.createElement('label');
                        label.style.display = 'flex';
                        label.style.alignItems = 'center';
                        label.style.cursor = 'pointer';
                        label.style.padding = '8px';
                        label.style.borderRadius = '5px';
                        label.style.transition = 'background 0.2s';

                        label.onmouseover = () => label.style.background = '#e8ebff';
                        label.onmouseout = () => label.style.background = 'transparent';

                        const checkbox = document.createElement('input');
                        checkbox.type = 'checkbox';
                        checkbox.className = 'district-checkbox';
                        checkbox.value = id;
                        checkbox.id = `district_${id}`;
                        checkbox.style.marginRight = '10px';
                        checkbox.style.width = '18px';
                        checkbox.style.height = '18px';
                        checkbox.style.cursor = 'pointer';

                        // Enable start button when any checkbox is checked
                        checkbox.onchange = updateStartButton;

                        const labelText = document.createElement('span');
                        labelText.textContent = name;
                        labelText.style.flex = '1';

                        label.appendChild(checkbox);
                        label.appendChild(labelText);
                        checkboxDiv.appendChild(label);
                        districtList.appendChild(checkboxDiv);
                    });

                    if (Object.keys(districts).length > 0) {
                        // Setup "Select All" functionality
                        document.getElementById('selectAllDistricts').onchange = function () {
                            const checkboxes = document.querySelectorAll('.district-checkbox');
                            checkboxes.forEach(cb => cb.checked = this.checked);
                            updateStartButton();
                        };
                    }
                })
                .catch(error => {
                    console.error('Error loading districts:', error);
                    districtList.innerHTML = '<p style="color: #d32f2f;">Error loading districts</p>';
                });
        }

        function updateStartButton() {
            const checkedBoxes = document.querySelectorAll('.district-checkbox:checked');
            document.getElementById('startBtn').disabled = checkedBoxes.length === 0;

            // Update "Select All" checkbox state
            const allCheckboxes = document.querySelectorAll('.district-checkbox');
            const allChecked = allCheckboxes.length > 0 &&
                Array.from(allCheckboxes).every(cb => cb.checked);
            document.getElementById('selectAllDistricts').checked = allChecked;
        }

        function startScraping() {
            const stateId = document.getElementById('stateSelect').value;
            const checkedBoxes = document.querySelectorAll('.district-checkbox:checked');
            const selectedDistricts = Array.from(checkedBoxes).map(cb => cb.value);

            if (!stateId) {
                alert('Please select a state');
                return;
            }

            if (selectedDistricts.length === 0) {
                alert('Please select at least one district');
                return;
            }

            // If all districts are selected, send "all" flag
            const allCheckboxes = document.querySelectorAll('.district-checkbox');
            const districtsToSend = (selectedDistricts.length === allCheckboxes.length)
                ? ['all']
                : selectedDistricts;

            // Show status panel
            document.getElementById('statusPanel').classList.add('active');
            document.getElementById('startBtn').disabled = true;
            document.getElementById('stopBtn').disabled = false;
            document.getElementById('downloadSection').style.display = 'none';

            // Send request to start scraping
            fetch('/api/start', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    state_id: stateId,
                    districts: districtsToSend
                })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Start polling for status updates
                        statusInterval = setInterval(updateStatus, 1000);
                    } else {
                        alert('Error: ' + (data.error || 'Unknown error'));
                        resetUI();
                    }
                })
                .catch(error => {
                    alert('Error starting scraper: ' + error);
                    resetUI();
                });
        }

        function updateStatus() {
            fetch('/api/status')
                .then(response => response.json())
                .then(data => {
                    // Update UI with status
                    document.getElementById('currentState').textContent = data.current_state || '-';
                    document.getElementById('currentDistrict').textContent = data.current_district || '-';
                    document.getElementById('currentSchool').textContent = data.current_school || '-';
                    document.getElementById('totalRecords').textContent = data.total_records || 0;

                    // Update progress bar
                    const progress = data.progress || 0;
                    const progressFill = document.getElementById('progressFill');
                    progressFill.style.width = progress + '%';
                    progressFill.textContent = progress + '%';

                    // Update message
                    const messageDiv = document.getElementById('statusMessage');
                    messageDiv.textContent = data.message || 'Processing...';

                    if (data.error) {
                        messageDiv.className = 'message error';
                    } else if (!data.is_running) {
                        messageDiv.className = 'message success';
                        if (data.message.includes('completed')) {
                            document.getElementById('downloadSection').style.display = 'block';
                        }
                        clearInterval(statusInterval);
                        resetUI();
                    } else {
                        messageDiv.className = 'message info pulsing';
                    }
                })
                .catch(error => {
                    console.error('Error fetching status:', error);
                });
        }

        function stopScraping() {
            fetch('/api/stop', { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                })
                .catch(error => {
                    console.error('Error stopping scraper:', error);
                });
        }

        function resetUI() {
            document.getElementById('startBtn').disabled = false;
            document.getElementById('stopBtn').disabled = true;
        }
    </script>
</body>

</html>